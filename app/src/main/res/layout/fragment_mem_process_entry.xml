<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <!--android:id="@+id/adapter_mem_process_entry"-->
        <TextView
            android:id="@+id/adapter_mem_process_entry_pid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:textAlignment="center"
        />
        <TextView
            android:id="@+id/adapter_mem_process_entry_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:textAlignment="center"
        />
        <TextView
            android:id="@+id/adapter_mem_process_entry_pkg_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textAlignment="center"
            android:textAllCaps="true"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/adapter_mem_process_entry_additional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
    />
</LinearLayout>
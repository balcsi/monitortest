        android:text="@string/dialog_meminfo_description_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />
    <!--android:textAlignment="center"-->

    <!--TODO kattinthatÃ³ link? setmovementMethod Ã©s autoLinkkel se megy, ha a resource-ba <a <href..>link</a>-t Ã­rok a resourceba-->
